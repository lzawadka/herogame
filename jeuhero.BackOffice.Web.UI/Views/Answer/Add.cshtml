@model jeuhero.Core.Data.Models.Answer

@{
	ViewData["Title"] = "Add";

	List<jeuhero.Core.Data.Models.Question> list = null;

	list = ViewBag.QuestionList;

	var listItems = list.Select(item => new SelectListItem() { Text = item.Title, Value = item.Id.ToString() }).ToList();
}

<h1>Add</h1>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
			<div class="form-group">
				<select asp-for="QuestionId" asp-items="listItems"></select>
			</div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
